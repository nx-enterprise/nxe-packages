{
  "version": 2,
  "outputCapture": "direct-nodejs",
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "Dev Server",
  "description": "Serve the app for development",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "description": "Dev server hostname",
      "default": "localhost"
    },
    "port": {
      "type": "number",
      "description": "Dev server port",
      "default": 3000
    },
    "migrate": {
      "type": "boolean",
      "description": "Run database migration before serving",
      "default": true
    }
  },
  "required": []
}
